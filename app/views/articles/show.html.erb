<div class="container mx-auto ">

<h1><%= @article.title %></h1>

<p><%= @article.body %></p>
<p><%= @article.author %></p>

<ul>
  <li class="btn"><%= link_to "Edit", edit_article_path(@article) %></li>
  <li class="btn"><%= link_to "Destroy", article_path(@article), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %></li>
</ul>

<button class="btn btn-primary">Contact</button>
</div>